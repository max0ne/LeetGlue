{
  "manifest_version": 2,
  "name": "Leetglue",
  "description": "Glue Leetcode with Github",
  "version": "0.1",
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://leetcode.com/problems/*"],
      "js": ["js/vendor.js", "js/content_script.js"]
    }
  ],
  "web_accessible_resources": ["js/injected.js"],
  "background": {
    "scripts": ["js/vendor.js", "js/background.js"]
  },
  "permissions": [
    "storage",
    "webRequest",
    "*://*.leetcode.com/",
    "debugger",
    "notifications",
    "webRequestBlocking",
    "cookies"
  ],
  "externally_connectable": {
    "matches": ["*://leetcode.com/problems/*"]
  }
}
